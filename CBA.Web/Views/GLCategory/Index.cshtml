@model IEnumerable<GLCategory>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">List of GL Category</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="glcategory" asp-action="Create" class="btn btn-primary mb-3" style="width:auto">Add New Category</a>
        </div>
    </div>
    <br />
</div>

    @if(Model.Count() > 0)
    {
        <table  class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Status
                    </th>
                    <th>
                        Description
                    </th>
                    <th>

                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                       <td width="30%">@category.Name</td>
                       <td width="30%">@category.State</td>
                       <td width="30%">@category.Description</td>
                       <td width="40%">
                           <div class="w-100 btn-group" category="group">
                               <a class="btn btn-primary mx-1 w-50" asp-action="Edit" asp-controller="glcategory" asp-route-id="@category.Id">Edit</a>
                           </div>
                       </td>
                   </tr>
                }
             </tbody>
        </table>
    }
    else
    {
        <div class="card">
            <div class="card-header">
                No GL Category created yet
            </div>
            <div class="card-body">
                <h5 class="card-title">
                    Use the button below to create
                </h5>
                <a class="btn btn-primary" style="width:auto"
                   asp-controller="glcategory" asp-action="Create">
                    Create GL Category
                </a>
            </div>
        </div>
    }